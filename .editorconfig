# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
charset = utf-8

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

# Added for git diff files in vim
[*.diff]
trim_trailing_whitespace = false
