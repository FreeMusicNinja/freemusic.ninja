{{#if errorMessage}}
  <div class="alert alert-danger">
    {{errorMessage}}
  </div>
{{/if}}

<form {{action 'authenticate' on='submit'}} role="form">
  <div class="form-group">
    <label for="identification">Email address</label>
    {{input value=identification type="email" class="form-control" id="identification" placeholder="Enter email" required=true}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    {{input value=password type="password" class="form-control" id="password" placeholder="Password" required=true}}
  </div>
  <button type="submit" class="btn btn-default">Login</button>
</form>
