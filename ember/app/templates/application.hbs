<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'index' class="navbar-brand"}}Free Music Ninja <span class="label label-default">Alpha</span>{{/link-to}}
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        {{#link-li}}
          {{#link-to 'index'}}
            Home
          {{/link-to}}
        {{/link-li}}
        {{#link-li}}
          {{#link-to 'resources'}}
            Resources
          {{/link-to}}
        {{/link-li}}
        {{#link-li}}
          {{#link-to 'donate'}}
            Donate
          {{/link-to}}
        {{/link-li}}
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {{#with controllers.auth}}
          {{#if session.isAuthenticated}}
            {{#if model}}
              <li class="navbar-text">Welcome, {{model.name}}</li>
            {{/if}}
            <li><a href="" {{ action 'invalidateSession' }}>Logout</a></li>
          {{else}}
            {{#link-li}}
              {{#link-to 'login'}}
                Login
              {{/link-to}}
            {{/link-li}}
          {{/if}}
        {{/with}}
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</div>

<div class="container">

  {{outlet}}

  <hr>

  <footer class="row">

    <div class="col-md-8">
      <p>Maintained by the <a href="https://github.com/FreeMusicNinja?tab=members">core team</a> with the help of <a href="https://github.com/FreeMusicNinja/freemusic.ninja/graphs/contributors">our contributors</a>.</p>
