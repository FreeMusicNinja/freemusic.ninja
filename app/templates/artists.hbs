<div>
  <div class="page-header">
    <h1>Artist Lookup</h1>
  </div>
  <p class="lead">Type the name of an artist to find similar artists with Creative Commons-licensed music.</p>

  <div class="input-group spacer">
    {{input type="text" value=query class="form-control" action="query"}}
    <div class="input-group-btn">
      <button class="btn btn-default" {{action "query"}}>
        {{#if loading}}
          <span class="loading glyphicon glyphicon-refresh spin"></span>
        {{/if}}
        Look up
      </button>
    </div>
  </div>

  {{#each results}}
    <div class="panel panel-default">
      <div class="panel-heading">
        {{name}}
        {{#link-to 'artist' id class='pull-right'}}<span class="glyphicon glyphicon-pencil"></span><span class="sr-only">Edit</span>{{/link-to}}
      </div>
      <div class="list-group">
      {{#each links}}
        <a {{bind-attr href=url}} class="list-group-item">{{display_name}}</a>
      {{/each}}
      </div>
    </div>
  {{else}}
    {{#if loading}}
    <div class="well">
      Loading...
    </div>
    {{else}}
      {{#if name}}
        <div class="panel panel-default">
          <div class="panel-body">
            No artist found.
          </div>
        </div>
      {{/if}}
    {{/if}}
  {{/each}}
</div>
