<div class="page-header">
  <h1>{{name}} <small>Edit User Profile</small></h1>
</div>

<form {{action 'save' on='submit'}} role="form">

  <div class="form-group">
    <label for="name">Name</label>
    {{input value=name type="text" class="form-control" id="name" required=true}}
  </div>

  <div class="form-group">
    <label for="email">Email address</label>
    <div class="input-group">
      {{input value=email type="email" class="form-control" id="email" required=true}}
      <span class="input-group-addon">@</span>
    </div>
  </div>

  <button type="submit" class="btn btn-default btn-lg">Edit Profile</button>
  {{#link-to 'user.index' class='btn btn-default btn-sm'}}Cancel{{/link-to}}
</form>
